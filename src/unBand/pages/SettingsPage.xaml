<UserControl x:Class="unBand.pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="this"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">
    <StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Bottom" FontSize="18">Settings</TextBlock>
        </StackPanel>

        <TextBlock Margin="0,20,0,10" TextWrapping="Wrap">When you login with your Microsoft Account, unBand caches your login session (not your username or password!) for a certain period of time. If you want to log in with a different account you can clear the cached credentials by clicking below.</TextBlock>
        <Button Margin="0,0,270,0" Click="ButtonClearLoginInfo_Click">Clear Cached Login Information</Button>

    </StackPanel>
</UserControl>