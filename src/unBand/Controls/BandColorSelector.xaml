<UserControl x:Class="unBand.Controls.BandColorSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             Height="51" Width="155"
             x:Name="me">
    
    <Border Background="{Binding ElementName=me, Path=Background}" Height="51" Width="155" MouseUp="Color_MouseUp">
        <xctk:ColorPicker Visibility="Hidden" x:Name="test" Width="155" UsingAlphaChannel="False" SelectedColorChanged="Color_SelectedColorChanged" Tag="BaseColor" MouseUp="ColorPicker_MouseUp" />
    </Border>
    
</UserControl>
